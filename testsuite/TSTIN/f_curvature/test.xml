<!--Membrane with fixed connectors-->
<!--Posfile from Pyhton Script -->
<Simulation
	simName="FCurvatureTest"
	inputFromResults="no"
	randomize = "yes"
>


 <Controller
	timesteps="1000"
	statusEvery="10"
	dt="0.01">

	<IntegratorVelocityVerletDisp	
		species = "membrane"
		displacement = "dm"
		symbol = "dm"
		lambda = "0.5"
		mass = "1"
	 />

	 <IntegratorVelocityVerletDisp
		species = "fluid"
		displacement = "df"
		symbol = "df"
		lambda = "0.5"
		mass = "1"
	 />
 </Controller>

<!--Random Forces -->
 <PairRandVector
	species1="fluid"
	species2="fluid"
	symbol="PRff"
	pairFactor="3*(1-rij)*[rij]/rij*10"
	cutoff = "1"
	seed="1023"
 />
 <PairRandVector
	species1="fluid"
	species2="membrane"
	symbol="PRfm"
	pairFactor="3*(1-rij)*[rij]/rij*10"
	cutoff = "1"
	seed="1023"	
 />

  <PairParticleVector
     species1="fluid"
     species2="fluid"
     expression = "[PRffij]"
     symmetry = "-1"
     symbol = "FRff"
     cutoff = "1"
  />

  <PairParticleVector
     species1="fluid"
     species2="membrane"
     expression = "[PRfmij]"
     symmetry = "-1"
     symbol = "FRfm"
     cutoff = "1"
  />

 <FParticleVels
    species = "fluid"
    expression = "[FRff]+[FRfm]"
  />
  <FParticleVels
    species = "membrane"
    expression = "[FRfm]"
  />


<!--Dissipative Forces -->
  <PairParticleVector
     species1="fluid"
     species2="fluid"
     expression = "-4.5*((1-rij)^2)*(([vi]-[vj]):[rij])*[rij]/(rij*rij)"
     symmetry = "-1"
     symbol = "FDff"
     cutoff = "1"
  />

  <PairParticleVector
     species1="fluid"
     species2="membrane"
     expression = "4.5*((1-rij)^2)*(([vj]-[vi]):[rij])*[rij]/(rij*rij)"
     symmetry = "-1"
     symbol = "FDfm"
     cutoff = "1"
  />

  <FParticleVels
    species = "fluid"
    expression = "[FDff]+[FDfm]"
  />

  <FParticleVels
    species = "membrane"
    expression = "[FDfm]"
  />

<!-- Conservative Forces -->
 <PairParticleVector
	species1 = "fluid"
	species2 = "fluid"
	expression = "25*(1-rij)*[rij]/rij"
	symmetry = "-1"
	symbol = "FCff"
	cutoff ="1"
 />

<!-- aij Different?!?!?!?! -->
 <PairParticleVector
	species1 = "fluid"
	species2 = "membrane"
	expression = "35*(1-rij)*[rij]/rij"
	symmetry = "-1"
	symbol = "FCfm"
	cutoff ="1"
 />

  <FParticleVels
    species = "fluid"
     expression = "[FCff]+[FCfm]"
  />
  <FParticleVels
    species = "membrane"
    expression = "[FCfm]"
  />


<!--MembraneInteractionForces-->
<!--MembraneConnectors-->
 <ConnectBasic
	forceName = "k_rho"
	species1 = "membrane"
	species2 = "membrane"
	pairFactor = "54.1688*(1-rij/0.693361)*[rij]/(rij)"
 />
 <FCurvature 
	forceName = "k_curv"
	kA = "0.0728088993"
	periodic = "yes"	
 />


<Phase>
	<LinkedListCreator />	
	
	<BoundaryCuboid
		boxX = "10"
		boxY = "10"
		boxZ = "10"
		periodicX = "yes"
		periodicY = "yes"
		periodicZ = "yes">

	<ReflectorStochastic/>
	
       <ParticleCreatorStatic
                nStaticPX = "10"
                nStaticPY = "10"
                nStaticPZ = "1"
                species = "fluid"
                corner1 = "(0,0,0)"
                corner2 = "(10,10,4.5)"
        />

       <ParticleCreatorStatic
                nStaticPX = "10"
                nStaticPY = "10"
                nStaticPZ = "1"
                species = "fluid"
                corner1 = "(0,0,5.5)"
                corner2 = "(10,10,10)"
        />

       <ParticleCreatorStatic
                nStaticPX = "10"
                nStaticPY = "10"
                nStaticPZ = "1"
                species = "membrane"
                corner1 = "(0,0,4.5)"
                corner2 = "(10,10,5.5)"
        />
	<ParticleConnectorFile
		species = "membrane"
		nameInputFile = "confile.con"
	/>
	
	</BoundaryCuboid>

</Phase>


 <MeterAverage>
	<KineticEnergy species="membrane"/>
	<OutputFile
	 nameOutputFile = "f_curvature.dat" 
	 multipleFiles = "no"/>
 </MeterAverage>


</Simulation>


